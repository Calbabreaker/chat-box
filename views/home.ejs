<html lang="en">
  <head>
    <%- include("./partials/head") %>
    <title>Chat Box</title>
  </head>
  <style>
    @media only screen and (max-width: 650px) {
      #mainDescription {
        width: 360px !important;
      }
    }

    #mainDescription {
      width: 540px;
      text-align: center;
      line-height: 1.5em;
    }

